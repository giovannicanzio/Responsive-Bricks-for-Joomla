<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.0" type="template" client="site">
	<name>responsivebricks</name>
	<creationDate>7 May 2012</creationDate>
	<author>Giovanni Canzio</author>
	<authorEmail>giovanni.canzio@gmail.com</authorEmail>
	<authorUrl>http://www.giovannicanzio.it</authorUrl>
	<copyright>Copyright (C) 2012 Giovanni Canzio All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0.0</version>
	<description>TPL_RESPONSIVEBRICKS_XML_DESCRIPTION</description>

	<files>
		<folder>images</folder>
		<folder>javascripts</folder>
		<folder>stylesheets</folder>
                <folder>language</folder>
		<filename>index.html</filename>
                <filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
	</files>

	<positions>
		<position>respbricks-debug</position>
		<position>respbricks-header</position>
                <position>respbricks-search</position>
                <position>respbricks-topnavigation</position>
                <position>respbricks-communication</position>
                <position>respbricks-prefacefirst</position>
                <position>respbricks-prefacemiddle</position>
                <position>respbricks-prefacelast</position>
                <position>respbricks-leftsidebar</position>
                <position>respbricks-breadcrumb</position>
                <position>respbricks-contenttop</position>
                <position>respbricks-contentbottom</position>
                <position>respbricks-rightsidebar</position>
                <position>respbricks-bottomfirst</position>
                <position>respbricks-bottommiddle</position>
                <position>respbricks-bottomlast</position>
                <position>respbricks-bottom1</position>
                <position>respbricks-bottom2</position>
                <position>respbricks-bottom3</position>
                <position>respbricks-bottom4</position>
                <position>respbricks-prefooter</position>
                <position>respbricks-footer</position>

	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_responsivebricks.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_responsivebricks.sys.ini</language>
	</languages>
        
        <config>
            <fields name="params">
                <fieldset name="advanced">
                    <field name="logo" type="media" 
                           label="TPL_RESPONSIVEBRICKS_FIELD_LOGO_LABEL"
                           description="TPL_RESPONSIVEBRICKS_FIELD_LOGO_DESC" />

                    <field name="sitetitle"  
                           type="text"
                           default=""
                           label="TPL_RESPONSIVEBRICKS_FIELD_SITETITLE_LABEL"
                           description="TPL_RESPONSIVEBRICKS_FIELD_SITETITLE_DESC"
                           filter="string" />

                    <field name="sitedescription"
                           type="text"
                           default=""
                           label="TPL_RESPONSIVEBRICKS_FIELD_DESCRIPTION_LABEL"
                           description="TPL_RESPONSIVEBRICKS_FIELD_DESCRIPTION_DESC"
                           filter="string" />
                </fieldset>
            </fields>
        </config>
        
</extension>
